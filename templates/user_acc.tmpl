    <body>
        <div class="container">
            <header>
            <!--preloader-->
                <div class="row offset-right">
                    <div class="col-md-12">
                        <div class="preloader">
                            <h2>Я почти загрузился :)</h2>
                            <div class="preload_container">
                            	<div class="pre_box"></div>
                                <div class="pre_box"></div>
                                <div class="pre_box"></div>
                                <div class="pre_box"></div>
                                <div class="pre_box"></div>
                            </div>
                        </div>
                    </div>
                </div>
            <!--/preloader -->
                <div class="row offset-right">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        <div>
                            <nav>
                                {% if user_id > 0 %}
                                <div class="login">
                                   <p>
                                        <img src="public/pic/Logo-mini.png" class="logo_mini">Добро пожаловать, {{user_name}}! 
                                        <a href="main_controller.php?user_acc=1">Личный кабинет</a> 
                                        <a href="main_controller.php?exit=1">Выйти</a>
                                    </p>
                                </div>
                                {%else%}
                                <div class="login">
                                    <p><img src="public/pic/Logo-mini.png" class="logo_mini"><a href="#" id="login">Войти</a> <a href="#" id="signup">Регистрация</a></p>
                                </div>
                                {%endif%}
                                <div class="menu">
                                    <p><a href="main_controller.php?desc=1">Объявления</a> <a href="main_controller.php?about=1">О проекте</a></p>
                                </div>
                            </nav>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>
            </header>
            <main>
                <div class="row offset-right">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        <div class="main_wrapper">
                            <h2>Личный кабинет.</h2>
                            <br>

                            <div class="user_data_box">
                                <div class="user_data">
                                    <h4>Ваша информация.</h4>
                                    <br>
                                    <div class="user_data_div hidden" id="user_data">
                                        <form action="main_controller.php?chandeUserData=1" method="POST" class="user_data_form">
                                            <input type="hidden" name="id" value = "{{user_data[0]['id']}}">
                                            Ваше имя:
                                            <br>
                                            <input type="text" name="name" value="{{user_data[0]['name']}}">
                                            <br>
                                            Ваш e-mail:
                                            <br>
                                            <input type="text" name="email" value="{{user_data[0]['email']}}">
                                            <br><br>
                                            <input type="submit" value="Сохранить">
                                        </form>
                                    </div>
                                    <p id="user_data_text">
                                        Ваше имя: <b>{{user_data[0]['name']}}</b>
                                        <br><br>
                                        Ваш email: <b>{{user_data[0]['email']}}</b>
                                        <br><br>
                                    </p>

                                    <p class="user_desc_handler" id="user_data_handler"><i class="fas fa-plus-square"></i> Ваши личные данные.</p>
                                    <!--/User info-->
                                </div>
                                
                                <div class="user_pass">
                                    <h4>Сменить пароль.</h4>
                                    <br>
                                    <p class="user_desc_handler" id="user_pass_handler"><i class="fas fa-plus-square"></i> Изменить пароль.</p>
                                    <div class="user_data_div hidden" id="user_pass">
                                        <h4>Сменить пороль.</h4>
                                        <form action="main_controller.php?chandeUserPass=1" method="POST" class="user_data_form">
                                            <input type="hidden" name="id" value = "{{user_data[0]['id']}}">
                                            Укажите старый пароль:
                                            <br>
                                            <input type="password" name="old_pass">
                                            <br>
                                            Укажите новый пароль:
                                            <br>
                                            <input type="password" name="new_pass">
                                            <br><br>
                                            <input type="submit" value="Сохранить">
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div class="userAccDesc">
                                <p class="user_desc_handler" id="user_desc_handler"><i class="fas fa-plus-square"></i> Ваши объявления.</p>
                                <div class=" hidden" id="user_desc">

                                    <div id="showPostsMenu">
                                        <a href="#" class="chosen" data-param="lostPat">Ищу питомца</a><a href="#" data-param="findPat">Ищу дом</a>
                                    </div>

                                    <div class="mainGrid hidden" id="findPosts">
                                        {% for key, postFind in postsFind %}
                                            <div class="descElement add_form">
                                                <form action="main_controller.php?editFindPost=1" method="POST">
                                                    <h4>Объявление №{{postFind['id']}}.</h4>
                                                    <input type="hidden" name="post_id" value = "{{postFind['id']}}">
                                                    <br><br>
                                                    Дата объявления: <br>{{dateFind[key]['day']}}.{{dateFind[key]['month']}}.{{dateFind[key]['year']}}.
                                                    <br><br>
                                                    Кто ищет дом:
                                                    <br>
                                                    <input type="text" name="header" value="{{ postFind['header'] }}">
                                                    <br>
                                                    Город:
                                                    <br>
                                                    <input type="text" name="city" value="{{postFind['city']}}">
                                                    <br>
                                                    Описание:
                                                    <br>
                                                    <textarea name="main_text">{{postFind['text']}}</textarea>
                                                    <br>
                                                    Связяться со мной через:
                                                    <br>
                                                    <input type="text" name="user_mail" value="{{postFind['contact']}}">
                                                    <br><br>
                                                    <input type="submit" value="Сохранить">
                                                </form>
                                                <form action="main_controller.php?deleteFindPost=1" method="POST">
                                                    <input type="hidden" name="post_id" value = "{{postFind['id']}}">
                                                    <input type="submit" value="Удалить">
                                                </form>
                                            </div>
                                        {%endfor%}
                                    </div>
                                

                                    <div class="mainGrid" id="lostPosts">
                                        {%if posts is empty%}
                                            Вы еще не разместили ни одного объявления.
                                        {%endif%}

                                        {% for key, post in posts %}
                                            <div class="descElement add_form">
                                                <form action="main_controller.php?editPost=1" method="POST">
                                                    <h4>Объявление №{{post['id']}}.</h4>
                                                    <input type="hidden" name="post_id" value = "{{post['id']}}">
                                                    <br><br>
                                                    Дата объявления: <br>{{date[key]['day']}}.{{date[key]['month']}}.{{date[key]['year']}}.
                                                    <br><br>
                                                    Кто пропал:
                                                    <br>
                                                    <input type="text" name="header" value="{{ post['header'] }}">
                                                    <br>
                                                    Город:
                                                    <br>
                                                    <input type="text" name="city" value="{{post['city']}}">
                                                    <br>
                                                    Описание:
                                                    <br>
                                                    <textarea name="main_text">{{post['text']}}</textarea>
                                                    <br>
                                                    Связяться со мной через:
                                                    <br>
                                                    <input type="text" name="user_mail" value="{{post['contact']}}">
                                                    <br><br>
                                                    <input type="submit" value="Сохранить">
                                                </form>
                                                <form action="main_controller.php?deletePost=1" method="POST">
                                                    <input type="hidden" name="post_id" value = "{{post['id']}}">
                                                    <input type="submit" value="Удалить">
                                                </form>
                                            </div>
                                        {%endfor%}
                                    </div>
                                </div>
                                <!--/User desc-->
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>
            </main>
