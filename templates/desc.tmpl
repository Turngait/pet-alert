                                        </a>
                                        <p class="post_text">
                                            {{post['text']|nl2br}}
                                        </p>
                                        <p class="contact_me">
                                            Вы можете со мной связаться по:
                                            
                                            <b>{{post['contact']}}</b>
                                        </p>
                                    </div>
                                </div>
                            {%endfor%}
