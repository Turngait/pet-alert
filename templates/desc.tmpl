                                Что бы добавить объявление - <a href="#" id="login1">войдите</a>.
                                <select id="sortPost">
                                </select> 
                            </p>
                            {%endif%}
                            

                            <div id="showPostsMenu" class="sweetcher">
                                <button class="sweetcher_elem chosen" data-param="lostPat">Поиск питомца</button><button class="sweetcher_elem" data-param="findPat">Поиск дома</button>
                            </div>
                            
                            <!--LOST POSTS -->
                            
                            <div class="post_block" id="lostPosts">
                            
                            {% for key, post in posts %}
                                <div class="post_element">
                                    <h4 class="post_header">{{post['id']}}.&nbsp; {{ post['header'] }}. &nbsp;<span class="post_city">{{post['city']}}</span> <span class="dataPost">{{date[key]['day']}}.{{date[key]['month']}}.{{date[key]['year']}}</span></h4>
                                    <div class="post_wrapper">

                                        <a href="{{post['src']}}" target="_blank">
                                            <img src="{{post['src']}}" class="petPhoto" alt="Pet photo">
                                        </a>
                                        <p class="post_text">
                                            {{post['text']|nl2br}}
                                        </p>
                                        <p class="contact_me">
                                            Вы можете со мной связаться по:
                                            <b>{{post['contact']}}</b>
                                        </p>
                                    </div>
                                </div>
                            {%endfor%}
                            </div>
                            <!--/LOST POSTS -->

                            <!--FIND POSTS-->
                            <div class="post_block hidden" id="FindPosts">
                            {% for key, post in postsFind %}
